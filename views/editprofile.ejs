<!doctype html>
<html ng-app="editprofile" ng-controller="editProfileCtrl">

<head>
    <title>Social Network</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0-rc.0/angular.min.js"></script>
    <style>

    </style>
</head>

<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Edit Profile</a>
                <a class="navbar-brand" href="/profile">Profile</a>
            </div>
            <div>
                <ul class="nav navbar-nav">


                </ul>
                <ul class="nav navbar-nav navbar-right">

                    <li> <a href="/logout" class="btn btn-danger btn-sm">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="well">
        <div class="row" style="margin-top: 80px;">
            <div class="col-md-4" style="margin-left: 20px;">
                Age:
                <input type="text" ng-model="user.age" />
                <br/> Gender:
                <input type="radio" ng-model="user.gender" value="male" name="gender" />Male
                <input type="radio" ng-model="user.gender" value="female" name="gender" />Female
                <br/> Usertype:
                <input type="text" ng-model="user.usertype" />
                <br/>
                <button ng-click="SubmitProfile()" class="btn btn-success">Submit</button>
            </div>
        </div>
    </div>
    <script>
        var app = angular.module('editprofile', []);
        app.controller('editProfileCtrl', ['$scope', '$http', function ($scope, $http) {
            $scope.user = {};
            $scope.user.age = <%= user.local.age%>;
            $scope.user.usertype = '<%= user.local.usertype%>';
            $scope.SubmitProfile = function () {
                console.log($scope.user);
                $http.post('savedata', $scope.user).then(function (res) {
                    window.location = '/profile';
                });
            };
}]);
    </script>
</body>

</html>