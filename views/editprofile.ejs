<!doctype html>
<html ng-app="editprofile" ng-controller="editProfileCtrl">
<head>
    <title>Social Network</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0-rc.0/angular.min.js"></script>
    <style>
        
    </style>
</head>
<body>
<div id="profileform">
    
    <input type="text" ng-model="user.age" />
    <input type="radio" ng-model="user.gender" value="male" name="gender"/>Male
    <input type="radio" ng-model="user.gender" value="female" name="gender"/>Female
    <input type="text" ng-model="user.usertype" />
    <button ng-click="SubmitProfile()">Submit</button>
    <h4><a href="/profile">Profile</a></h4>
</div>
<script>
var app=angular.module('editprofile', []);
app.controller('editProfileCtrl', ['$scope','$http', function($scope,$http){
    $scope.user={};
    $scope.user.age=<%= user.local.age%>;
    $scope.user.usertype='<%= user.local.usertype%>';
    $scope.SubmitProfile=function(){
        console.log($scope.user);
        $http.post('savedata', $scope.user).then(function(res){
            window.location='/profile';
        });
    };
}]);
</script>
</body>
</html>

